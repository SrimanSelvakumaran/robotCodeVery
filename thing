import java.util.Scanner;
public class ConversionsProject {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		boolean repeat = true;
		while(repeat) {
			System.out.println("--Conversions--\n-feetToInches\n-milesToFeet\n-yardsToMeters\n-poundsToKilograms");
			System.out.print("Which one would you like to use?");
			String choiceA = input.nextLine();
			System.out.print("What should your input be? ");
			double num = input.nextDouble();
			if (choiceA.toLowerCase().equals("feettoinches"))
				System.out.println(feetToInches(num));
			else if (choiceA.toLowerCase().equals("milestofeet"))
				System.out.println(milesToFeet(num));
			else if (choiceA.toLowerCase().equals("yardstometers"))
				System.out.println(milesToFeet(num));
			else if (choiceA.toLowerCase().equals("poundstokilograms")
				System.out.println(milesToFeet(num));
			else
				System.out.println("Sorry, that is not possible.");
			while(!choice.equals("y") && !choice.equals("yeet") && !choice.equals("n")) {
				System.out.print("Would you like to continue running? (y/n) ");
				choice = num.nextLine();
			}
			if(choice.equals("n"))
				repeat = false;
		}
	}
	public static double feetToInches(double feet) {
		return feet*12.0;
	}
	public static double milesToFeet(double miles) {
		return miles*5280.0;
	}
	public static double yardsToMeters(double yards) {
		return yards*1.094;
	}
	public static double poundsToKilograms(double kilos) {
		return kilos*2.205;
	}
}
